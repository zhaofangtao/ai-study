/* pages/index/index.wxss */

/* 导航按钮样式 */
.navigation-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.nav-btn {
  flex: 1;
  background: linear-gradient(135deg, #3B82F6 0%, #1E3A8A 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.nav-icon {
  font-size: 32rpx;
}

.nav-text {
  font-size: 24rpx;
}

.nav-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.4);
}

.nav-btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

/* 快速操作按钮样式优化 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.quick-action-btn {
  flex: 1;
  background: #F3F4F6;
  color: #374151;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.quick-action-btn:hover {
  background: #E5E7EB;
  border-color: #D1D5DB;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .navigation-buttons {
    gap: 12rpx;
    padding: 0 16rpx;
  }
  
  .nav-btn {
    padding: 16rpx 12rpx;
    gap: 6rpx;
  }
  
  .nav-icon {
    font-size: 28rpx;
  }
  
  .nav-text {
    font-size: 22rpx;
  }
  
  .quick-actions {
    flex-direction: column;
    gap: 12rpx;
    padding: 0 16rpx;
  }
  
  .quick-action-btn {
    padding: 16rpx;
    font-size: 22rpx;
  }
}
/* 友
好加载提示样式 */
.friendly-loading {
  text-align: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #F0F9FF, #E0F2FE);
  border-radius: 16rpx;
  border: 2rpx solid #BAE6FD;
  margin: 20rpx 0;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-icon {
  font-size: 48rpx;
  animation: bounce 2s infinite;
}

.loading-text {
  font-weight: 600;
  color: #1E40AF;
  font-size: 28rpx;
}

.loading-subtitle {
  font-size: 24rpx;
  color: #6B7280;
  opacity: 0.8;
  text-align: center;
  line-height: 1.4;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
  justify-content: center;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #3B82F6;
  border-radius: 50%;
  animation: wave 1.4s ease-in-out infinite both;
}

.loading-dot:nth-child(1) { 
  animation-delay: -0.32s; 
}

.loading-dot:nth-child(2) { 
  animation-delay: -0.16s; 
}

.loading-dot:nth-child(3) { 
  animation-delay: 0s; 
}

.thinking-progress {
  width: 100%;
  height: 8rpx;
  background-color: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.thinking-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6, #1E40AF, #3B82F6);
  background-size: 200% 100%;
  animation: progress-flow 2s linear infinite;
}

/* 动画定义 */
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { 
    transform: translateY(0); 
  }
  40% { 
    transform: translateY(-20rpx); 
  }
  60% { 
    transform: translateY(-10rpx); 
  }
}

@keyframes wave {
  0%, 60%, 100% { 
    transform: initial; 
    opacity: 1; 
  }
  30% { 
    transform: translateY(-30rpx); 
    opacity: 0.7; 
  }
}

@keyframes progress-flow {
  0% { 
    background-position: 200% 0; 
  }
  100% { 
    background-position: -200% 0; 
  }
}

/* 淡入动画 */
@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

/* 为友好加载提示添加淡入效果 */
.friendly-loading {
  animation: fadeIn 0.5s ease-in-out;
}
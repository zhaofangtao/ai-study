/* pages/topics/topics.wxss */
.container {
  padding: 20rpx;
  background-color: #f8fafc;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E3A8A;
  margin-bottom: 32rpx;
  text-align: center;
}

.industry-container {
  margin-bottom: 24rpx;
  border: none;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.industry-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #E2E8F0;
  color: #3B82F6;
  cursor: pointer;
}

.industry-title {
  font-size: 32rpx;
  font-weight: bold;
}

.industry-toggle {
  font-size: 24rpx;
  transition: transform 0.3s ease;
}

.industry-toggle.expanded {
  transform: rotate(180deg);
}

.industry-topics {
  background: #F8FAFC;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.industry-topics.expanded {
  max-height: 2000rpx;
  padding: 20rpx;
}

.topic-item {
  background: white;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid #E5E7EB;
  font-size: 28rpx;
  color: #374151;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.topic-item:hover {
  border-color: #3B82F6;
  background: #F0F9FF;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.1);
}

.topic-item:active {
  transform: translateY(0);
  box-shadow: 0 4rpx 8rpx rgba(59, 130, 246, 0.1);
}

.topic-item.cached {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: white;
  border-color: #10B981;
}

.topic-item.cached::after {
  content: "✓ 已学习";
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  opacity: 0.9;
}

.topic-item:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 24rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
  
  .industry-title {
    font-size: 28rpx;
  }
  
  .topic-item {
    font-size: 26rpx;
    padding: 20rpx;
  }
}
/* pages/history/history.wxss */

/* 顶部操作按钮 - 一行排列 */
.history-top-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
  justify-content: center;
}

.history-action-btn {
  flex: 1;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.history-action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(59, 130, 246, 0.4);
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
}

.history-action-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.4);
}

/* 历史记录项操作按钮 */
.history-item-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: flex-end;
  justify-content: center;
}

.history-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 10rpx 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
  min-width: 90rpx;
  max-width: 100rpx;
}

.history-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.4);
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
}

.history-btn-danger {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.history-btn-danger:active {
  background: linear-gradient(135deg, #DC2626 0%, #B91C1C 100%);
  box-shadow: 0 2rpx 6rpx rgba(239, 68, 68, 0.4);
}

.history-btn:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.4);
}

.history-btn-danger:hover {
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.4);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .history-top-actions {
    flex-direction: row;
    gap: 12rpx;
  }
  
  .history-action-btn {
    padding: 16rpx 12rpx;
    font-size: 22rpx;
  }
  
  .history-item-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .history-btn {
    padding: 10rpx 16rpx;
    font-size: 20rpx;
  }
}